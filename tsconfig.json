{
  "compilerOptions": {
    "target": "esnext",                       
    "module": "esnext",                       
    "declaration": true,                      
    "sourceMap": true,                     
    "outDir": "./dist/",
    // "outFile": "./dist/index.js",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",                       
    "noImplicitAny": true,
    "baseUrl": "./",                       
    "paths": {
      "@/*": [
        "src/*"
      ]
    },  
    // "esModuleInterop": true
    },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}